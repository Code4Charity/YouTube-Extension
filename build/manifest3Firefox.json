{
	"manifest_version": 3,
	"short_name": "ImprovedTube",
	"name": "'Improve YouTube!' ðŸŽ§ (for YouTube & Videos)",
	"description": "__MSG_description_ext__",
	"version": "4.1077",
	"default_locale": "en",
	"icons": {
		"128": "menu/icons/128.png",
		"16": "menu/icons/16.png",
		"32": "menu/icons/32.png",
		"48": "menu/icons/48.png"
	},
	"browser_specific_settings": {
		"gecko": {
		"id": "{3c6bf0cc-3ae2-42fb-9993-0d33104fdcaf}"
		}
	},
  	"background": {
    		"background.scripts": "background.js",
    		"scripts": [ "background.js" ]
  	},
	"action": {
		"default_popup": "menu/index.html",
		"default_area": "navbar"
	},
	"options_page": "menu/index.html",
	"options_ui": {
		"page": "menu/index.html"
	},
	"content_scripts": [
		{
			"all_frames": true,
			"css": [
				"extension/yt.be/styles.css",
				"extension/yt.be/night-mode/night-mode.css",
				"extension/yt.be/general/general.css",
				"extension/yt.be/appearance/header/header.css",
				"extension/yt.be/appearance/player/player.css",
				"extension/yt.be/appearance/details/details.css",
				"extension/yt.be/appearance/sidebar/sidebar.css",
				"extension/yt.be/appearance/comments/comments.css"
			],
			"exclude_matches": [
				"https://yt.be/audiolibrary/*",
				"https://yt.be/tv*"
			],
			"js": [
				"extension/core.js",
				"extension/functions.js",
				"extension/yt.be/night-mode/night-mode.js",
				"extension/yt.be/general/general.js",
				"extension/yt.be/appearance/sidebar/sidebar.js",
				"extension/yt.be/appearance/comments/comments.js",
				"extension/init.js"
			],
			"matches": [
				"https://yt.be/*"
			],
			"run_at": "document_start"
		}
	],
	"host_permissions": [ "https://yt.be/*" ],
	"optional_permissions": [
		"downloads"
	],
	"permissions": [
		"contextMenus",
		"storage"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"menu/index.html",
				"web-accessible/core.js",
				"web-accessible/functions.js",
				"web-accessible/yt.be/appearance.js",
				"web-accessible/yt.be/player.js",
				"web-accessible/yt.be/themes.js",
				"web-accessible/yt.be/playlist.js",
				"web-accessible/yt.be/channel.js",
				"web-accessible/yt.be/shortcuts.js",
				"web-accessible/yt.be/blocklist.js",
				"web-accessible/yt.be/settings.js",
				"web-accessible/init.js",
				"menu/icons/48.png"
			],
			"matches": [
				"https://www.youtube.com/*"
			]
		}
	]
}
